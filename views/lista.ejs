<%- include('header'); -%>

    <div class="box" id="heading">
        <h1> <%= tituloLista %> </h1>
    </div>

    <div class="box">
        <% for (let i=0; i<listaDeItens.length; i++) { %>
            <div class="item">
                <input type="checkbox">
                <p>
                    <%= listaDeItens[i] %>
                </p>
            </div>
        <% } %>

        <form class="item" action="/" method="post">
            <input type="text" name="afazer" placeholder="Novo item" autocomplete="off">
            <button type="submit" name="adicionar" value="<%= tituloLista %>">+</button>
        </form>

    </div>

    <%- include('footer') -%>

